pipeline {
  agent {
    node {
      label 'DEPLOY_TEST_LAMBDA'
    }
  }
  stages {
    stage('Deploy') {
      steps {
        script {
          def depScript = load ('deploy/deploy_script.groovy')
          depScript.deployOnLAMBDA();
         }
       }
     }
   stage('wait_prior_starting_smoke_testing')
   {
    steps {
     script {
           def time = params.SLEEP_TIME_IN_SECONDS
           sleep time.toInteger(); // seconds
            }
        }
     }

   }
  
 }    
	
